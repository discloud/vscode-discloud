{
  "name": "discloud",
  "displayName": "Discloud",
  "description": "Usado para fazer métodos na DisCloud diretamente pelo Visual Studio Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
		"*"
	],
  "main": "out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "discloud.commit",
        "title": "Commit"
      },
      {
        "command": "discloud.upload",
        "title": "Upload"
      },
      {
        "command": "discloud.start",
        "title": "Start"
      },
      {
        "command": "discloud.restart",
        "title": "Restart"
      },
      {
        "command": "discloud.stop",
        "title": "Stop"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "discloud-sidebar",
          "title": "Discloud.app",
          "icon": "media/discloudlogo.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "discloud-apps",
        "contents": "Você ainda não forneceu um token para ter acesso aos recursos da Discloud.\n[Send token Discloud](command:discloud.logIn)",
        "when": "!##"
      }
    ],
    "views": {
      "discloud-sidebar": [
        {
          "type": "tree",
          "id": "discloud-apps",
          "name": "Apps",
          "visibility": "visible"
        },
        {
          "type": "tree",
          "id": "discloud-teams",
          "name": "Teams",
          "visibility": "collapsed"
        },
        {
          "type": "tree",
          "id": "discloud-subdomains",
          "name": "SubDomains",
          "visibility": "collapsed"
        },
        {
          "type": "tree",
          "id": "discloud-domains",
          "name": "customDomains",
          "visibility": "collapsed"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "discloud.commit",
          "when": "explorerResourceIsFolder"
        },
        {
          "submenu": "discloudsub",
          "group": "1_modification"
        }
      ],
      "discloudsub": [
        {
          "command": "discloud.commit"
        }
      ]
    },
    "submenus": [
      {
        "label": "Discloud",
        "id": "discloudsub"
      }
    ],
    "configuration": {
      "title": "Discloud",
      "properties": {
        "discloud.token": {
          "type": "string",
          "default": "",
          "markdownDescription": "Seu token da API da [Discloud](https://discloudbot.com)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "axios": "^0.27.2"
  }
}
